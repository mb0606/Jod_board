
#job
	.job
		%h1= @job.title
		%h3= @category.name
		%p= @job.description
		.btn.btn-default= link_to "#{(@job.company).capitalize}", "#{@job.url}", target: "blank"
		%hr
#links
	=link_to "Delete", @job, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-small btn-default"
	= link_to "Home", root_path , class: "btn btn-small btn-default"
	= link_to "Edit", edit_job_path(@job), class: "btn btn-small btn-default"